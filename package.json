{
  "name": "@ssz-universal/verifier",
  "version": "1.0.0",
  "description": "Production-grade, zero-dependency SSZ verifier with universal platform support (TypeScript, C, Rust, WASM)",
  "keywords": ["ssz", "ethereum", "merkle", "verification", "zero-dependency", "wasm", "risc-v", "embedded"],
  "homepage": "https://github.com/anuragchvn-blip/ssz-universal-verifier",
  "repository": {
    "type": "git",
    "url": "https://github.com/anuragchvn-blip/ssz-universal-verifier.git"
  },
  "bugs": {
    "url": "https://github.com/anuragchvn-blip/ssz-universal-verifier/issues"
  },
  "license": "MIT",
  "author": "SSZ Universal Verifier Contributors",
  "type": "commonjs",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "ssz-verify": "bin/ssz-verify.js"
  },
  "files": [
    "dist/",
    "bin/",
    "src/",
    "c-skel/",
    "rust-skel/",
    "wasm/",
    "README.md",
    "LICENSE",
    "CONTRIBUTING.md",
    "PRODUCTION_STATUS.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "npm run test:basic && npm run test:extended",
    "test:basic": "node dist/tests/vectors.js",
    "test:extended": "node dist/tests/extended-vectors.js",
    "test:all": "npm run test:basic && npm run test:extended",
    "bench": "node dist/tests/benchmarks.js",
    "bench:advanced": "tsc && node dist/tests/benchmarks-advanced.js",
    "bench:direct": "tsc && node dist/tests/direct-benchmark.js",
    "bench:aggressive": "tsc && node dist/tests/aggressive-bench.js",
    "bench:throughput": "tsc && node dist/src/merkle-optimized.js",
    "bench:parallel": "tsc && node dist/src/merkle-parallel.js",
    "bench:native": "npm run build:native && tsc && node dist/tests/bench-native.js",
    "build:native": "cd native && npm install && npm run build",
    "cli": "node bin/ssz-verify.js",
    "build:wasm": "cd wasm && npm run build",
    "build:wasm:all": "cd wasm && npm run build:all",
    "build:wasm:web": "cd wasm && npm run build:web",
    "build:wasm:node": "cd wasm && npm run build:nodejs",
    "build:wasm:simd": "cd wasm && RUSTFLAGS='-C target-feature=+simd128' wasm-pack build --target web -- --features simd",
    "test:wasm": "cd wasm && npm test",
    "serve:wasm": "cd wasm/examples && python -m http.server 8080"
  },
  "devDependencies": {
    "@chainsafe/ssz": "^1.3.0",
    "@types/node": "^24.10.1",
    "typescript": "^5.0.0"
  }
}
