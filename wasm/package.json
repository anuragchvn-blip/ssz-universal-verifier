{
  "name": "wasm-build",
  "version": "1.0.0",
  "description": "WASM build configuration for SSZ Universal Verifier",
  "private": true,
  "scripts": {
    "build": "npm run build:web",
    "build:web": "wasm-pack build --target web --out-dir pkg --release",
    "build:nodejs": "wasm-pack build --target nodejs --out-dir pkg-nodejs --release",
    "build:bundler": "wasm-pack build --target bundler --out-dir pkg-bundler --release",
    "build:all": "npm run build:web && npm run build:nodejs && npm run build:bundler",
    "optimize": "wasm-opt -Oz pkg/ssz_verifier_wasm_bg.wasm -o pkg/ssz_verifier_wasm_bg.wasm",
    "test": "wasm-pack test --headless --firefox",
    "test:chrome": "wasm-pack test --headless --chrome",
    "serve": "python -m http.server 8080",
    "clean": "rm -rf pkg pkg-* target"
  },
  "devDependencies": {
    "wasm-opt": "^1.3.0"
  }
}
